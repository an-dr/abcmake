set(ABCMAKE_VERSION_MAJOR 6)
set(ABCMAKE_VERSION_MINOR 2)
set(ABCMAKE_VERSION_PATCH 0)
set(ABCMAKE_VERSION "${ABCMAKE_VERSION_MAJOR}.${ABCMAKE_VERSION_MINOR}.${ABCMAKE_VERSION_PATCH}")

file(READ "version" ver)
string(REGEX MATCH "set\\(ABCMAKE_VERSION_MAJOR ([0-9]+)\\)" _ ${ver})
set(ABCMAKE_VERSION_MAJOR ${CMAKE_MATCH_1})
string(REGEX MATCH "set\\(ABCMAKE_VERSION_MINOR ([0-9]+)\\)" _ ${ver})
set(ABCMAKE_VERSION_MINOR ${CMAKE_MATCH_1})
string(REGEX MATCH "set\\(ABCMAKE_VERSION_PATCH ([0-9]+)\\)" _ ${ver})
set(ABCMAKE_VERSION_PATCH ${CMAKE_MATCH_1})
